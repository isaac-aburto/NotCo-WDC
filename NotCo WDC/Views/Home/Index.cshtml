<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <style>
        html, body {
            height: 100%;
            margin: 0px;
            background-color: #f2f2f2;
        }

        .container, .row {
            height: 100%;
        }

        .btn-primary {
            color: #fff;
            background-color: #F50079;
            border-color: #F50079;
            padding: 12px;
            margin-left: 15px;
            margin-right: 7px;
        }

        .btn-primary:hover {
            color: #fff;
            background-color: #F50079;
            border-color: #F50079;
            box-shadow: 0px 1px 10px 0.2px rgba(0, 0, 0, 0.2);
        }

        .btn-primary:active {
            color: #fff;
            background-color: #df006e;
            border-color: #df006e;
            box-shadow: 0px 1px 10px 0.2px rgba(0, 0, 0, 0.2);
        }

        .btn-primary:focus {
            color: #fff;
            background-color: #ca0064 !important;
            border-color: #ca0064 !important;
            box-shadow: 0px 1px 10px 0.2px rgba(0, 0, 0, 0.2) !important;
        }

        .cuadrado {
            width: 40px;
            height: 40px;
            background: #7842ca;
            border-radius: 12px;
            margin-left: 1pc;
            margin-right: 9px;
        }
        .btn-secondary {
            color: #fff;
            background-color: #7842ca;
            border-color: #7842ca;
            box-shadow: 0px 1px 10px 0.2px rgb(0 0 0 / 20%);
            padding: 12px;
            margin-left: 15px;
            margin-right: 7px;
        }
        .btn-secondary:hover {
            color: #fff;
            background-color: #6046bb;
            border-color: #6046bb;
            box-shadow: 0px 1px 10px 0.2px rgb(0 0 0 / 20%);
        }
        .btn-secondary:active {
            color: #fff;
            background-color: #412f81;
            border-color: #412f81;
            box-shadow: 0px 1px 10px 0.2px rgba(0, 0, 0, 0.2);
        }

        .btn-secondary:focus {
            color: #fff;
            background-color: #412f81 !important;
            border-color: #412f81 !important;
            box-shadow: 0px 1px 10px 0.2px rgba(0, 0, 0, 0.2) !important;
        }
        h6 {
            margin-top: 10px !important;
        }
        a {
            color: #493359;
        }
        a:hover {
            color: #F50079;
            text-decoration: underline;
        }
        .row {
            display: initial !important;
        }
        .container {
            left: 24%;
            /* margin: -15px 0 0 232px; */
            position: absolute;
            margin: -25px 0 0 -25px;
        }
        }
    </style>

